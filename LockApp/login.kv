#:include connected.kv






<Login>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "background.png"

    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,200,10,50]
        spacing: 50

        Label:
            text: '[color=#445882][font=Lato-Black]Xin vui lòng nhập mã'
            font_size: 32
            markup: True

        BoxLayout:
            orientation: 'vertical'

            TextInput:
                id: login
                multiline:False
                font_size: 32
                halign: 'center'
        BoxLayout:
            orientation: 'vertical'


            RelativeLayout:
                pos: self.parent.pos
                size: self.parent.size

            Button:
                text: '[color=#ffffff][font=Lato-Black]XÁC NHẬN'
                font_size: 24
                markup:True
                halign: 'center'
                size: 200, 50
                on_press: root.do_login(login.text, '123')


